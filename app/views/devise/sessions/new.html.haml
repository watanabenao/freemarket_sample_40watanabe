= render "/shared/single-header"

%main
  .login
    %section.login__no-account
      %p アカウントをお持ちでない方はこちら
      = link_to "#", class: "btn-default login__btn-blue" do
        新規会員登録
    %section.login__sns
      = link_to "#", class: "btn-default login__btn-fb" do
        = fa_icon "facebook-square"
        Facebookでログイン

      = link_to "#", class: "btn-default login__btn-goo" do
        Googleでログイン

    = form_for "#", html: {class: "login-form"} do |f|
      .login-form__inner
        .form-group
          = f.text_field :email, class: "input-user-info", placeholder: "メールアドレス"
        .form-group.form-box
          = f.text_field :password, class: "input-user-info", placeholder: "パスワード"

        .form-group.form-box
          = recaptcha_tags

        .form-group.form-box
          = f.submit "ログイン", class: "btn-default login__btn-red"


= render "/shared/single-footer"

