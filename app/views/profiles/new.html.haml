= render 'devise/registrations/signup-header'

%main
  #signup__address.signup
    .signup__body
      %section
        %h2.signup__title 発送元・お届け先住所
      .signup__inner
        .signup__content
          = form_for "#", html: {class: 'signup__form'} do |f|
            .form-group.no-margin
              %label
                お名前
              %span.form-require 必須
              %div
                = f.text_field :last_name, class: "user-info__form user-info__form--registered"
              %div
                = f.text_field :first_name, class: "user-info__form user-info__form--registered"
            .form-group
              %label  
                お名前(カナ)
              %span.form-require 必須
              %div
                = f.text_field :last_name_kana, class: "user-info__form user-info__form--registered"
              %div
                = f.text_field :first_name_kana, class: "user-info__form user-info__form--registered"
            .form-group
              %label  
                郵便番号
              %span.form-require 必須
              %div
                = f.text_field :postal_code, class: "user-info__form", placeholder: "例)123-4567"
            .form-group
              %label  
                都道府県
              %span.form-require 必須
              .select-form
                = f.select :prefecture, ["---", "北海道", "青森県", "岩手県"],{},{class: "user-info__form"}
                = fa_icon "angle-down"
            .form-group
              %label  
                市区町村
              %span.form-require 必須
              %div
                = f.text_field :city, class: "user-info__form", placeholder: "例)横浜市緑区"
            .form-group
              %label  
                番地
              %span.form-require 必須
              %div
                = f.text_field :address, class: "user-info__form",placeholder: "例)青山1−1−1"
            .form-group
              %label
                建物名
              %span.form-any 任意
              %div
                = f.text_field :building, class: "user-info__form",placeholder: "例)柳ビル103"
            .form-group
              %label
                電話
              %span.form-any 任意
              %div
                = f.text_field :phone_num, class: "user-info__form",placeholder: "例)09012345678"
            .form-group
              = f.submit '次へ進む', class: "submit-btn--red"
             
= render 'shared/single-footer'

